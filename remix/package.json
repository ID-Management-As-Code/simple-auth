{
    "private": true,
    "name": "simple-auth",
    "description": "A simple server for for simple authentication",
    "license": "MIT",
    "author": {
        "name": "Blacky Wolf"
    },
    "scripts": {
        "build": "cross-env NODE_ENV=production remix build",
        "build:css": "tailwindcss -m -i ./themes/main.css -o app/styles/main.css",
        "dev": "concurrently \"npm run dev:css\" \"npm run dev:remix\"",
        "dev:remix": "cross-env NODE_ENV=development remix dev",
        "dev:css": "tailwindcss -w -i ./themes/main.css -o app/styles/main.css",
        "postinstall": "remix setup node",
        "start": "cross-env NODE_ENV=production remix-serve build"
    },
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^1.3.0",
        "@fortawesome/pro-duotone-svg-icons": "^6.0.0",
        "@fortawesome/pro-light-svg-icons": "^6.0.0",
        "@fortawesome/pro-regular-svg-icons": "^6.0.0",
        "@fortawesome/pro-solid-svg-icons": "^6.0.0",
        "@fortawesome/pro-thin-svg-icons": "^6.0.0",
        "@fortawesome/react-fontawesome": "^0.1.17",
        "@remix-run/react": "^1.2.1",
        "@remix-run/serve": "^1.2.1",
        "cross-env": "^7.0.3",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "remix": "^1.2.1"
    },
    "devDependencies": {
        "@remix-run/dev": "^1.2.1",
        "@types/react": "^17.0.24",
        "@types/react-dom": "^17.0.9",
        "autoprefixer": "^10.4.2",
        "concurrently": "^7.0.0",
        "postcss": "^8.4.6",
        "postcss-import": "^14.0.2",
        "tailwindcss": "^3.0.23",
        "typescript": "^4.1.2"
    },
    "engines": {
        "node": ">=14"
    },
    "sideEffects": false
}
